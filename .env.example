# TTS Microservice Environment Configuration
# Copy this file to .env and update with your values

# Required: Your Groq API Key
GROQ_API_KEY=your_groq_api_key_here

# Optional: Server Configuration
TTS_HOST=0.0.0.0
TTS_PORT=8000
TTS_DEBUG=false
TTS_LOG_LEVEL=INFO

# Optional: TTS Configuration
TTS_USE_GROQ=true
TTS_GROQ_MODEL=playai-tts
TTS_GROQ_VOICE=Fritz-PlayAI
TTS_MAX_CONCURRENT_CONNECTIONS=10
TTS_MAX_TEXT_LENGTH=9000
TTS_CHUNK_SIZE=200
TTS_CHUNK_SIZE_WORDS=15

# Note: Never commit your actual .env file with real API keys to version control!
# Add .env to your .gitignore file to keep secrets safe.